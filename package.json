{
  "name": "frontend-lit-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:vite\"",
    "dev:vite": "vite",
    "dev:api": "tsx dev-api-server.js",
    "tsc": "tsc",
    "build": "bun build:graph && bun lint && bun tsc && vite build",
    "build:graph": "sh -c '[ -f .env.local ] && set -a && . .env.local; graphclient build'",
    "preview": "vite preview",
    "validate-graph": "sh -c '[ -f .env.local ] && set -a && . .env.local; graphclient validate'",
    "fetch-introspection": "sh -c '[ -f .env.local ] && set -a && . .env.local; mkdir -p .graphclient/sources/updraft; curl -vvv -H \"Content-Type: application/json\" -H \"Authorization: Bearer $VITE_GRAPH_API_KEY\" -d \"{\\\"query\\\": \\\"query IntrospectionQuery { __schema { types { name kind fields { name type { name kind ofType { name kind } } } } } }\\\"}\" https://gateway.thegraph.com/api/subgraphs/id/J9Y2YwQwX5QgW1naUe7kGAxPxXAA8A2Tp2SeyNxMB6bH > .graphclient/sources/updraft/introspectionSchema.json'",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "test": "web-test-runner --node-resolve",
    "test:watch": "web-test-runner --node-resolve --watch",
    "clear-vite-cache": "rm -rf node_modules/.vite",
    "generate:supabase-types": "sh -c '[ -f .env.local ] && set -a && . .env.local; npx supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" --schema public > src/types/supabase-generated.types.ts'",
    "generate:campaign-types": "npx json-schema-to-typescript -o src/types/campaign.ts shared/schemas/campaign-schema.json"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^6.3.5",
    "@graphprotocol/client-urql": "^2.0.7",
    "@lit-labs/router": "^0.1.4",
    "@lit-labs/signals": "^0.2.0",
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "@reown/appkit": "^1.8.15",
    "@reown/appkit-adapter-wagmi": "^1.8.15",
    "@reown/appkit-siwe": "^1.8.15",
    "@shoelace-style/shoelace": "^2.20.1",
    "@supabase/supabase-js": "^2.89.0",
    "@types/turndown": "^5.0.6",
    "@vercel/node": "^5.5.16",
    "@walletconnect/core": "^2.23.1",
    "@walletconnect/utils": "^2.23.1",
    "ajv": "^8.17.1",
    "dayjs": "^1.11.19",
    "dompurify": "^3.3.1",
    "ethereum-blockies-base64": "^1.0.2",
    "graphql": "^16.12.0",
    "isomorphic-dompurify": "^2.35.0",
    "lit": "^3.3.2",
    "marked": "^17.0.1",
    "porto": "^0.2.37",
    "react": "^19.2.3",
    "turndown": "^7.2.2",
    "urql": "^5.0.1",
    "viem": "^2.43.4",
    "wagmi": "^3.1.4"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "^3.0.7",
    "@graphql-mesh/bare": "npm:@graphql-mesh/merger-bare@^0.105.19",
    "@graphql-mesh/graphql": "^0.104.19",
    "@graphql-mesh/localforage": "npm:@graphql-mesh/cache-localforage@^0.105.19",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-alias": "^6.0.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "graphql-yoga": "^5.18.0",
    "husky": "^9.1.7",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sinon": "^21.0.1",
    "supabase": "^2.70.5",
    "terser": "^5.44.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vite-plugin-mkcert": "^1.17.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "trustedDependencies": [
    "@reown/appkit"
  ]
}
