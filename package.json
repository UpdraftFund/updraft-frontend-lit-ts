{
  "name": "frontend-lit-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:vite\"",
    "dev:vite": "vite",
    "dev:api": "tsx dev-api-server.js",
    "tsc": "tsc",
    "build:all": "bun build:graph && bun lint && bun tsc && vite build",
    "build:graph": "sh -c '[ -f .env.local ] && set -a && . .env.local && graphclient build'",
    "preview": "vite preview",
    "validate-graph": "sh -c '[ -f .env.local ] && set -a && . .env.local && graphclient validate'",
    "fetch-introspection": "sh -c '[ -f .env.local ] && set -a && . .env.local && mkdir -p .graphclient/sources/updraft && curl -vvv -H \"Content-Type: application/json\" -H \"Authorization: Bearer $VITE_GRAPH_API_KEY\" -d \"{\\\"query\\\": \\\"query IntrospectionQuery { __schema { types { name kind fields { name type { name kind ofType { name kind } } } } } }\\\"}\" https://gateway.thegraph.com/api/subgraphs/id/J9Y2YwQwX5QgW1naUe7kGAxPxXAA8A2Tp2SeyNxMB6bH > .graphclient/sources/updraft/introspectionSchema.json'",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "test": "web-test-runner --node-resolve",
    "test:watch": "web-test-runner --node-resolve --watch",
    "clear-vite-cache": "rm -rf node_modules/.vite",
    "generate:supabase-types": "sh -c '[ -f .env.local ] && set -a && . .env.local && npx supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" --schema public > src/types/supabase-generated.types.ts'",
    "generate:campaign-types": "npx json-schema-to-typescript -o src/types/campaign.ts shared/schemas/campaign-schema.json"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^6.3.2",
    "@graphprotocol/client-urql": "^2.0.7",
    "@lit-labs/router": "^0.1.3",
    "@lit-labs/signals": "^0.1.1",
    "@lit/context": "^1.1.3",
    "@lit/task": "^1.0.2",
    "@reown/appkit": "^1.7.17",
    "@reown/appkit-adapter-wagmi": "^1.7.17",
    "@reown/appkit-siwe": "^1.7.17",
    "@shoelace-style/shoelace": "^2.20.0",
    "@supabase/supabase-js": "^2.50.0",
    "@types/turndown": "^5.0.5",
    "@vercel/node": "^5.2.1",
    "@walletconnect/core": "^2.21.5",
    "@walletconnect/utils": "^2.21.5",
    "ajv": "^8.17.1",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "ethereum-blockies-base64": "^1.0.2",
    "graphql": "^16.10.0",
    "isomorphic-dompurify": "^2.25.0",
    "lit": "^3.2.1",
    "marked": "^15.0.12",
    "porto": "^0.2.37",
    "react": "^19.1.0",
    "turndown": "^7.2.0",
    "urql": "^4.2.1",
    "viem": "^2.40.3",
    "wagmi": "^3.0.2"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "^3.0.7",
    "@graphql-mesh/bare": "npm:@graphql-mesh/merger-bare@latest",
    "@graphql-mesh/graphql": "^0.104.17",
    "@graphql-mesh/localforage": "npm:@graphql-mesh/cache-localforage@latest",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.20.0",
    "@web/test-runner-playwright": "^0.11.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "graphql-yoga": "^5.17.0",
    "husky": "^9.1.7",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "sinon": "^19.0.2",
    "supabase": "^2.24.3",
    "terser": "^5.39.0",
    "tsx": "^4.20.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
