{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/idea/*": ["src/features/idea/components/*"],
      "@components/solution/*": ["src/features/solution/components/*"],
      "@components/common/*": ["src/features/common/components/*"],
      "@components/layout/*": ["src/features/layout/components/*"],
      "@components/navigation/*": ["src/features/navigation/components/*"],
      "@components/home/*": ["src/features/pages/home/components/*"],
      "@styles/idea/*": ["src/features/idea/styles/*"],
      "@styles/solution/*": ["src/features/solution/styles/*"],
      "@styles/common/*": ["src/features/common/styles/*"],
      "@styles/layout/*": ["src/features/layout/styles/*"],
      "@styles/navigation/*": ["src/features/navigation/styles/*"],
      "@state/idea/*": ["src/features/idea/state/*"],
      "@state/solution/*": ["src/features/solution/state/*"],
      "@state/common/*": ["src/features/common/state/*"],
      "@state/layout/*": ["src/features/layout/state/*"],
      "@state/navigation/*": ["src/features/navigation/state/*"],
      "@state/user/*": ["src/features/user/state/*"],
      "@state/home/*": ["src/features/pages/home/state/*"],
      "@icons/common/*": ["src/features/common/assets/icons/*"],
      "@images/*": ["src/features/common/assets/images/*"],
      "@pages/*": ["src/features/pages/*"],
      "@layout/*": ["src/features/layout/components/*"],
      "@utils/*": ["src/features/common/utils/*"],
      "@styles/*": ["src/features/common/styles/*"],
      "@schemas/*": ["updraft-schemas/json-schemas/*"],
      "@gql": [".graphclient"]
    }
  },
  "include": ["src"]
}
